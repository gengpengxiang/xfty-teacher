<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bj.hmxxteacher.widget.CustomViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/my_page_item_divider" />

    <LinearLayout
        android:id="@+id/ll_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_fff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tab0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_tab_class_unselected" />

            <TextView
                android:id="@+id/tv_tab0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bottom_tab_0"
                android:textColor="@color/text_tab_unselected"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab1"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:src="@mipmap/ic_guanli_gray" />

            <TextView
                android:id="@+id/tv_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理"
                android:textColor="@color/text_tab_unselected"
                android:textSize="10sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_tab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_tab_person" />

            <TextView
                android:id="@+id/tv_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/text_tab_unselected"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
